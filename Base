<?php
session_start();

// Debugging - Check if POST data is received
if ($_SERVER["REQUEST_METHOD"] !== "POST") {
    echo "Form was not submitted via POST method.";
    exit();
}

if (!isset($_POST["username"]) || !isset($_POST["password"])) {
    echo "POST data is missing.";
    exit();
}

$username = $_POST["username"];
$password = $_POST["password"];

echo "Received Username: " . htmlspecialchars($username) . "<br>";
echo "Received Password: " . htmlspecialchars($password) . "<br>";
?>
