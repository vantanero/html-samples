<?php
session_start();
if (!isset($_SESSION['error'])) {
    header("Location: index.html"); // If no error, send back to login page
    exit();
}
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login Failed</title>
    <style>.error { color: red; }</style>
</head>
<body>
    <h2>Login Failed</h2>
    <p class="error">
        <?php 
            echo $_SESSION['error']; 
            unset($_SESSION['error']); // Clear error after displaying
        ?>
    </p>
    <a href="index.html">Try Again</a>
</body>
</html>
